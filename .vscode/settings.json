{
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "files.readonlyInclude": {
    "**/node_modules/**": true,
    "**/pnpm-lock.yaml": true
  },
  "eslint.enable": false,
  "prettier.enabled": false,
  "oxc.enable": true,
  // JSON
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "oxc.oxc-vscode"
  }
}
